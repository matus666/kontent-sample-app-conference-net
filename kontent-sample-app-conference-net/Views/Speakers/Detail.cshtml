@model Speaker
@{
    ViewData["Title"] = Model.FirstName + " " + Model.LastName;
}


    <section id="venue">
        <div class="section-header">
            <h2>Speaker Information</h2>
        </div>

        <div class="row no-gutters">
            <div class="col-lg-4">
                @if (Model.Photo.Any())
                {
                    <img src="@Html.DisplayFor(model => model.Photo.First().Url)" />
                }
                else
                {
                    <img src="~/images/SpeakerIcon.png" />
                }
            </div>
            <div class="col-lg-8 venue-info">
                <div class="row justify-content-center">
                    <div class="col-11 col-lg-8">
                        <h3>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
                        <p>@Html.Raw(@Model.Bio)</p>
                    </div>
                </div>
            </div>
        </div>
        <!--==========================
        Speaker's Linked Agenda Items
        ============================-->
        @await Component.InvokeAsync("SpeakerAgendaItem", new { speakerCodename = Model.System.Codename, location = ViewBag.location })
    </section>
    </div>
<script src="https://platform.twitter.com/widgets.js"></script>