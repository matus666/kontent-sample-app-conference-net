@model IEnumerable<HubspotForm>
@{
    ViewData["Title"] = "RegistrationForm";
}
    <div name="registration_form">
        @if(Model.Any())
        { 
            @foreach (HubspotForm hu in Model)
                {
                    <script charset="utf-8" type="text/javascript" src="//js.hsforms.net/forms/shell.js"></script>
                    <script>
                        hbspt.forms.create({
	                    portalId: "@hu.PortalId",
	                    formId: "@hu.FormId"
                        });
                    </script>
            }
        }
        else
        {
            <p style="float:right;">Registrations are not currently unavailable.  Please <a href="mailto:no-reply@localhost.local">contact us!</a></p>
        }
    </div>